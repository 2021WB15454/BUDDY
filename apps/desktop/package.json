{
  "name": "buddy-desktop",
  "version": "0.1.0",
  "description": "BUDDY Desktop - Cross-platform personal AI assistant",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:backend": "cd ../../packages/core && python -m uvicorn buddy.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc",
    "build:package": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ai",
    "assistant",
    "voice",
    "personal",
    "privacy",
    "offline"
  ],
  "author": "BUDDY Team <team@buddy-ai.dev>",
  "license": "MIT",
  "homepage": "https://buddy-ai.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buddy-ai/buddy.git"
  },
  "bugs": {
    "url": "https://github.com/buddy-ai/buddy/issues"
  },
  "devDependencies": {
    "@types/node": "^20.19.18",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.9.2",
    "vite": "^4.5.14"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.1",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.5",
    "postcss": "^8.4.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.18.0",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.5",
    "zustand": "^4.4.6"
  },
  "build": {
    "appId": "dev.buddy-ai.desktop",
    "productName": "BUDDY",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../packages/core",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/tests",
          "!**/.*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
